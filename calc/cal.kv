#: import utils kivy.utils
<cal>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id:cal_input
            text:"0"
            halign:"left"
            font_size:50
            size_hint:(1,.15)

        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(.2,.2)
                font_size:30
                text:"xÂ²"
                background_color:utils.get_color_from_hex("#97ccc6")
                on_press:root.pow()

            Button:
                size_hint:(.2,.2)
                font_size:30
                text:"CE"
                background_color:utils.get_color_from_hex("#97ccc6")
                on_press:root.de()

            Button:
                id:clear
                size_hint:(.2,.2)
                font_size:30
                text:"C"
                background_color:utils.get_color_from_hex("#97ccc6")
                on_press:root.clear()

            Button:
                size_hint:(.2,.2)
                font_size:30
                text:"/"
